
<div class="sidebar-fixed container-scroller" style="background-color: rgb(44, 44, 44);">
  <%= render 'shared/sidebar' %>
  <div class="container-fluid page-body-wrapper">
    <!-- partial:partials/_navbar.html -->
    <%= render 'shared/topbar' %>
    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="page-header">
          <h3 class="page-title"> サークル情報 </h3>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">サークルページ</a></li>
              <li class="breadcrumb-item active" aria-current="page">サークル情報</li>
            </ol>
          </nav>
        </div>
        <div class="row">
          <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body" style="background-color: rgb(255, 255, 255); color: #000;">
                <h4 class="card-title" >メンバー設定</h4>
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home-1" role="tab" aria-controls="home" aria-selected="true">メンバー追加</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile-1" role="tab" aria-controls="profile" aria-selected="false">引継ぎ</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact-1" role="tab" aria-controls="contact" aria-selected="false">任命</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="contact2-tab" data-toggle="tab" href="#contact-2" role="tab" aria-controls="contact2" aria-selected="false">辞退</a>
                  </li>
                </ul>

                <div class="tab-content">
                  <div class="tab-pane fade show active" id="home-1" role="tabpanel" aria-labelledby="home-tab">
                    <h3>メンバー設定</h3>
                    <section>
                      <div class="form-group">
                        <%= form_with url: invite_group_path(id: @group.id) do |f| %>
                        <label style="display: block;">メンバー招待</label>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '招待先アドレス', class: "form-control col-md-10",
                                                    :'aria-describedby' => "emailHelp", style: "color: white; display:inline-block ;" %>
                          <%= button_tag type: "submit", class: "btn btn-danger btn-icon-text" do %>
                            <i class="mdi mdi-email" style="display: inline-block;"></i> 送信
                          <% end %>
                          <small id="emailHelp" class="form-text text-muted">登録したいアドレスに招待メールを送ります。</small>
                        <% end %>
                      </div>
                      <div class="form-group">
                        <%= form_with url: batch_group_users_path(group_id: @group.id), local: true do %>
                          <label>一括登録</label>
                          <%= password_field_tag :password, nil, placeholder: "登録用初期パスワード", class: "form-control", style: "color: white;" %>
                          <%= link_to csv_template_path(format: :csv), class: "btn btn-success btn-icon-text" do %>
                            <i class="mdi mdi-debug-step-into"></i> csvダウンロード
                          <% end %>
                          <%# <button type="button" class="btn btn-success btn-icon-text">
                            <i class="mdi mdi-debug-step-into"></i> csvダウンロード
                          </button> %>
                          <%= button_tag type: "submit", class: "btn btn-danger btn-icon-text" do %>
                            <i class="mdi mdi-email"></i> 一括登録
                          <% end %>
                          <p><%= file_field_tag :file %></p>
                          <small id="emailHelp" class="form-text text-muted">csvファイルに必要事項を記入し提出してください。</small>
                        <% end %>
                      </div>
                    </section>
                  </div>
                  <div class="tab-pane fade" id="profile-1" role="tabpanel" aria-labelledby="profile-tab">
                    <h3>引継ぎ</h3>
                    <section>
                      <%= form_with url: inherit_group_path(group_id: @group.id) do |f| %>
                        <div class="form-group">
                          <input type="form" id='inheritable-search' class="form-control col-md-8" aria-describedby="emailHelp" placeholder="引継ぎたい人の名前を入力してください"
                                  style="display: inline-block; color: white;" data-generals="<%= @generals.to_json %>" data-group-id="<%= @group.id %>">
                          <%# <button type="button" class="btn btn-success btn-icon-text" style="display: inline-block;">
                            <i class="mdi mdi-email"></i> 検索
                          </button> %>
                          <%= button_tag type: 'submit', class: "btn btn-danger btn-icon-text", style: "display: inline-block;" do %>
                            <i class="mdi mdi-email"></i> 引継ぐ
                          <% end %>
                          <small id="emailHelp" class="form-text text-muted">引き継ぎたいメンバーを選択します。</small>
                        </div>

                        <div class="card">
                          <div class="card-body">
                            <div class="row">
                              <div class="col-12">
                                <form action="#">
                                  <div class="form-group d-flex">
                                    <%= render 'inheritable_members', f: f %>
                                  </div>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </section>
                  </div>
                  <div class="tab-pane fade" id="contact-1" role="tabpanel" aria-labelledby="contact-tab">
                    <h3>任命</h3>
                    <% if @executives.count <= 7 %>
                      <section>
                        <%= form_with url: assign_group_path(group_id: @group.id) do |f| %>
                          <div class="form-group">
                            <label style="display: block;">任命先選択</label>
                            <input type="form" id="assignable-search" class="form-control col-md-8" aria-describedby="emailHelp" placeholder="任命したい人の名前を入力してください" style="display: inline-block; color: white;">
                            <%= button_tag type: 'submit', class: "btn btn-danger btn-icon-text", style: "display: inline-block;" do %>
                              <i class="mdi mdi-email"></i> 任命する
                            <% end %>
                            <small id="emailHelp" class="form-text text-muted">引き継ぎたいメンバーを選択します。</small>
                          </div>

                          <div class="card">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-12">
                                  <form action="#">
                                    <div class="form-group d-flex">
                                      <%= render 'assignable_members', f: f %>
                                    </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </section>
                    <% else %>
                      <p class='box10'>現在幹事が８名いるため任命できません</p>
                    <% end %>
                  </div>

                  <div class="tab-pane fade" id="contact-2" role="tabpanel" aria-labelledby="contact2-tab">
                    <h3>辞退</h3>
                    <section>
                      <button class="btn btn-outline-primary col-md-12" onclick="showSwal('warning-message-and-cancel')">辞退する</button>

                    </section>
                  </div>


                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!-- content-wrapper ends -->
      <!-- content-wrapper ends -->
      <!-- partial:partials/_footer.html -->
      <%= render 'shared/footer' %>
      <!-- partial -->
    </div>
    <!-- main-panel ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<script>
  var inheritableSearch = $('#inheritable-search');
  var assignableSearch = $('#assignable-search');
  var generals = inheritableSearch.data('generals');
  var groupId = inheritableSearch.data('group-id');
  var url1 = `/groups/${groupId}/inheritable_search`
  var url2 = `/groups/${groupId}/assignable_search`
  inheritableSearch.on('keyup', function(e){
    e.preventDefault(); // キャンセル可能なイベントをキャンセル
    var input = inheritableSearch.val(); // 前後の空白を取り除いて代入
    $.ajax({
      url: url1,
      type: 'GET',
      data: { keyword: input },
      // processData: false,
      contentType: false,
      dataType: 'json'
    })
    .done(function(data){
      var result = $('#inheritable-result');
      result.find('option').remove();
      result.find('li').remove();
      if (input.length === 0){
        generals.each(function(i, user){
          result.find('select').append(`<option value='${user.id}'>` + user.name + '</option>')
        });
      } else if (input.length !== 0){
        $(data).each(function(i, user){
          result.find('select').append(`<option value='${user.id}'>` + user.name + '</option>')
          result.append('<li>' + user.name + '</li>') // <li>ユーザーの名前</li>を追加
        });
      } else {
        result.append('<li>' + '一致するメンバーが見つかりません' + '</li>')
      }
    })

    .fail(function() {
      alert('検索に失敗しました');
    });
  });

  assignableSearch.on('keyup', function(e){
    e.preventDefault(); // キャンセル可能なイベントをキャンセル
    var input = assignableSearch.val(); // 前後の空白を取り除いて代入
    $.ajax({
      url: url2,
      type: 'GET',
      data: { keyword: input },
      // processData: false,
      contentType: false,
      dataType: 'json'
    })
    .done(function(data){
      var result = $('#assignable-result');
      result.find('option').remove();
      result.find('li').remove();
      if (input.length === 0){
        generals.each(function(i, user){
          result.find('select').append(`<option value='${user.id}'>` + user.name + '</option>')
        });
      } else if (input.length !== 0){
        $(data).each(function(i, user){
          result.find('select').append(`<option value='${user.id}'>` + user.name + '</option>')
          result.append('<li>' + user.name + '</li>') // <li>ユーザーの名前</li>を追加
        });
      } else {
        result.append('<li>' + '一致するメンバーが見つかりません' + '</li>')
      }
    })

    .fail(function() {
      alert('検索に失敗しました');
    });
  });
</script>

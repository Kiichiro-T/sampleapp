<% provide(:title, "新規登録") %>
<% content_for :pack_tag do %>
  <%= javascript_pack_tag 'users/registrations/new' %>
  <%= stylesheet_pack_tag 'users/registrations/new' %>
<% end %>

<div class="back1"></div>
<div class="back2"></div>

<div class="box-newaccount">
  <div class="text1">新規登録</div>
  <p class="text2">ようこそ。登録をしてすぐに利用できます。</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.select :gender, [['男', false], ['女', true]], include_blank: '性別', class: "textbox1"  %>
    </div>

    <div class="field">
      <%= f.text_field :name, class: "textbox2", placeholder: '氏名' %>
    </div>

    <div class="field">
      <%= f.text_field :furigana, class: "textbox3", placeholder: 'フリガナ' %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "textbox4", placeholder: 'メールアドレス' %>
    </div>

    <% grade = [] %>
    <% 6.times do |i| %>
      <% grade << ["#{i + 1}年生", i+1] %>
    <% end %>
    <% grade << ['その他', 7] %>
    <div class="field">
      <%= f.select :grade, grade, include_blank: '学年' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "textbox5", placeholder: 'パスワード' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "textbox6", placeholder: '確認用パスワード' %>
    </div>

    <input type="checkbox" class="checkbox">
    <a href="" class="text8">利用規約に同意する</a>

    <%= f.submit "登録", class: "button1" %>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <%= link_to "登録済みならログイン", new_session_path(resource_name), class: "text9" %><br />
  <% end %>

  <%#- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%#= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text9" %><br />
  <%# end %>
</div>

<%= form_for(@transaction, url: group_event_transactions_path(group_id: @group.id, event_id: @event.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

    <%= f.hidden_field :creditor_id, :value => current_user.id %>
    <%= f.hidden_field :event_id, :value => @event.id %>
    <%= f.hidden_field :group_id, :value => @group.id %>

    <%= f.label :debtor_id, "支払う人" %> <br />
    <% users = [] %>
    <% GroupUser.where(group_id: @group.id).each do |relationship| %>
      <% unless relationship.user_id == current_user.id %>
        <% users << User.find(relationship.user_id) %>
      <% end %>
    <% end %>
    <%= f.select :debtor_id,
        options_from_collection_for_select(users, :id, :name), # User.where(id: relationships.user_id).where.not(id: current_user.id)
          {
            class: "form-control", :prompt => "選択できます"
          } 
    %><br />

    <%= f.label :debt, "支払うべき金額" %> <br />
    <%= f.number_field :debt, class: "form-control" %> <br />

    <%= f.label :payment, "支払い済み金額" %> <br />
    <%= f.number_field :payment, class: "form-control" %> <br />

    <%= f.label :deadline, "支払い期限" %> <br />
    <%= f.date_field :deadline, class: "form-control" %> <br />

    <%= f.submit "作成"%>
  </div>
<% end %>
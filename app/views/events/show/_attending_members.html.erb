<div class="card" style="margin-bottom: 20px;">
  <div class="card-body" style="color: black;">
    <h4 class="card-title">出席</h4>
    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table id="order-listing" class="table">
            <thead>
              <tr>
                <th>名前</th>
                <th>回答日</th>
                <th>学年</th>

                <th>支払うべき額</th>
                <th>支払った金額</th>

                <th>何か</th>
                <th>支払い状況</th>
                <th>編集</th>
              </tr>
            </thead>
            <tbody>
              <% @attending_answers.each do |answer| %>
                <% user = User.find(answer.user_id) %>
                <% transaction = Event::Transaction.find_by(event_id: @event.id, debtor_id: user.id) %>
              <tr>
                <td><%= user.name %></td>
                <td><%= l answer.updated_at, format: :short %></td>
                <td><%= user.grade %></td>
                <td>￥<%= transaction.debt %></td>
                <td>￥<%= transaction.payment %></td>
                <td>?</td>
                <td>
                  <% if transaction.completed? %>
                    <%= link_to '完了', receipt_event_transaction_path(event_id: transaction.event_id, url_token: transaction.url_token, format: 'pdf') %>
                  <% else %>
                    <%= form_with model: transaction, url: event_transaction_path(event_id: @event.id, url_token: transaction.url_token) do |f| %>
                      <%= f.select :completed, [['完了', true], ['未完了', false]], class: "btn-secondary", style: "background-color:rgb(236, 236, 236)" %>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= link_to '変更', edit_event_transaction_path(event_id: transaction.event_id, url_token: transaction.url_token), class: "btn btn-outline-primary" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <nav style="margin-top: 20px;">
            <ul class="pagination d-flex justify-content-end pagination-primary">
              <li class="page-item"><a class="page-link" href="#"><i class="mdi mdi-chevron-left"></i></a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">4</a></li>
              <li class="page-item"><a class="page-link" href="#"><i class="mdi mdi-chevron-right"></i></a></li>
            </ul>
          </nav>
          <button type="button" class="btn btn-danger btn-icon-text">
            <i class="mdi mdi-check"></i> 保存
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_for(@transaction, url: event_transactions_path(event_id: @event.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

    <%= f.hidden_field :creditor_id, :value => current_user.id %>
    <%= f.hidden_field :event_id, :value => @event.id %>
    <%= f.hidden_field :group_id, :value => @event.group_id %>

    <%= f.label :debtor_id, "支払う人" %> <br />
    <%#= f.text_field :debtor, class: "form-control", placeholder: "例）田中　太郎" %> <br /> <%# これから設定していく　%>

    <%= f.label :debt, "金額" %> <br />
    <%= f.number_field :debt, class: "form-control" %> <br />

    <%= f.label :deadline, "支払い期限" %> <br />
    <%= f.date_field :deadline, class: "form-control" %> <br />

    
    <%= f.submit "作成"%>
  </div>
<% end %>
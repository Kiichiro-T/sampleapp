<div class="col-md-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body" style="color: black;">
      <div class="d-flex flex-row justify-content-between">
        <h4 class="card-title mb-1">イベント一覧</h4>
        <p class="text-muted mb-1">あなたのサークルのイベント</p>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="preview-list">
            <% colors = ['primary', 'success', 'info', 'danger', 'warning'] %>
            <% @events.each_with_index do |event, i| %>
              <div class="preview-item border-bottom">
                <div class="preview-thumbnail">
                  <div class="preview-icon bg-<%= colors[i] %>">
                    <i class="mdi mdi-file-document"></i>
                  </div>
                </div>
                <div class="preview-item-content d-sm-flex flex-grow">
                  <div class="flex-grow">
                    <h6 class="preview-subject"><%= link_to event.name, group_event_path(group_id: event.group_id, id: event.id) %></h6>
                    <p class="text-muted mb-0">
                      <% comment =  event.comment %>
                      <% if comment.present? %>
                        <%= comment %>
                      <% else %>
                        一言なし
                      <% end %>
                    </p>
                  </div>
                  <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                    <p class="text-muted">￥<%= event.amount %></p>
                    <p class="text-muted mb-0">
                      <% start_date, end_date = event.start_date, event.end_date %>
                      <% if start_date == end_date %>
                        <%= l start_date, format: :short %>
                      <% else %>
                        <%= l start_date, format: :short %> ~ <%= l end_date, format: :short %>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
